<Page x:Class="Independiente.View.Pages.CreditPoliciesManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Independiente.View.Pages"
      xmlns:p="clr-namespace:Independiente.Properties"
      xmlns:vm="clr-namespace:Independiente.ViewModel"
      xmlns:conv="clr-namespace:Independiente.Converters"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="PersonalData">

    <Page.DataContext>
        <vm:CreditDetailsViewModel />
    </Page.DataContext>

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/View/ViewResources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <conv:DateTimeToStringConverter  x:Key="DateTimeToStringConverter " />

        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button x:Name="BackButton"
                Style="{DynamicResource IconButtonStyle}"
                Tag="{DynamicResource BackIcon}"
                Foreground="{StaticResource IconBlackColor}"
                Margin="7,7,7,7"
                Command="{Binding GoBackCommand}" />


        <ScrollViewer Grid.Column="1"
                      Grid.Row="1"
                      Margin="0,0,10,20"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Stretch">
                <Border Background="{StaticResource BackGroundBlackColor}"
                        Height="40"
                        Margin="4"
                        CornerRadius="6"
                        Padding="5"
                        HorizontalAlignment="Stretch">
                    <Grid Width="310"
                          HorizontalAlignment="Left">
                        <TextBox x:Name="SearchTextBox"
                                 Style="{StaticResource TextBoxWithPlaceholderStyle}"
                                 Margin="10,0,0,0"
                                 TextWrapping="Wrap"
                                 MinWidth="150"
                                 Width="300"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 Tag="{x:Static p:Resources.SearchClientByRFCPlaceHolderGlobal}"
                                 CharacterCasing="Upper" />

                        <Button x:Name="HidePasswordButton"
                                Style="{DynamicResource IconButtonStyle}"
                                Tag="{DynamicResource SearchIcon}"
                                Foreground="{StaticResource IconBlackColor}"
                                Height="18"
                                Width="18"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="10,0"
                                Panel.ZIndex="2" />
                    </Grid>
                </Border>

                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Margin="10">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsViewMode}"
                                             Value="true">
                                    <Setter Property="IsHitTestVisible"
                                            Value="false" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding IsViewMode}"
                                             Value="false">
                                    <Setter Property="IsHitTestVisible"
                                            Value="true" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <StackPanel  Grid.Column="1"
                                 HorizontalAlignment="Stretch">

                        <ListView x:Name="CreditPoliciesListView"
                                  ItemsSource="{Binding CreditPolicyItems}"
                                  Height="420"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  Visibility="Visible"
                                  Background="Transparent"
                                  Margin="10"
                                  BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4"
                                            Padding="0"
                                            Margin="-1"
                                            MinHeight="32"
                                            MinWidth="1200"
                                            HorizontalAlignment="Stretch">
                                        <Border.Background>
                                            <SolidColorBrush Color="#dcdcdc" />
                                        </Border.Background>
                                        <Canvas>
                                            <TextBox x:Name="NameTextBox"
                                                     Width="240"
                                                     Text="{Binding Name}"
                                                     HorizontalAlignment="Left"
                                                     FontSize="10"
                                                     FontWeight="Bold"
                                                     Foreground="Black"
                                                     Margin="9"
                                                     Style="{StaticResource TextBoxWithPlaceholderStyle}"
                                                     Height="20"
                                                     IsEnabled="{Binding IsEditable}" />
                                            <TextBox x:Name="DescriptionTextBox"
                                                     Width="400"
                                                     Text="{Binding Description}"
                                                     HorizontalAlignment="Left"
                                                     FontSize="10"
                                                     FontWeight="Bold"
                                                     Foreground="Black"
                                                     Margin="260,8,0,0"
                                                     Style="{StaticResource TextBoxWithPlaceholderStyle}"
                                                     Height="20"
                                                     IsEnabled="{Binding IsEditable}" />
                                            <TextBlock Width="100"
                                                       Text="{Binding RegistrationDate}"
                                                       HorizontalAlignment="Left"
                                                       FontSize="10"
                                                       FontWeight="Bold"
                                                       Foreground="Black"
                                                       Margin="675,8,0,0"
                                                       Height="24" />

                                            <TextBox Width="100"
                                                     Text="{Binding EndDate}"
                                                     HorizontalAlignment="Left"
                                                     FontSize="10"
                                                     FontWeight="Bold"
                                                     Foreground="Black"
                                                     Margin="770,8,0,0"
                                                     Style="{StaticResource TextBoxWithPlaceholderStyle}"
                                                     Height="20"
                                                     IsEnabled="{Binding IsEditable}" />
                                            <ComboBox x:Name="StatusComboBox"
                                                      Width="100"
                                                      Text="{Binding Status}"
                                                      HorizontalAlignment="Left"
                                                      FontSize="10"
                                                      FontWeight="Bold"
                                                      Foreground="Black"
                                                      Margin="895,8,0,0"
                                                      Style="{StaticResource ComboBoxWithPlaceholderStyle}"
                                                      Height="20"
                                                      IsEnabled="{Binding IsEditable}"
                                                      Tag="{Binding Status}" />

                                            <Button x:Name="EditButton"
                                                    Width="18"
                                                    Height="18"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    Tag="{DynamicResource EditIcon}"
                                                    Foreground="{StaticResource IconBlackColor}"
                                                    Margin="1040,8,0,0"
                                                    />

                                            <Button x:Name="EditOffButton"
                                                    Width="18"
                                                    Height="18"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    Tag="{DynamicResource EditOffIcon}"
                                                    Foreground="{StaticResource IconBlackColor}"
                                                    Margin="1040,8,0,0"
                                                   
                                                    Visibility="Collapsed" />
                                            <Button x:Name="DeleteButton"
                                                    Width="18"
                                                    Height="18"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    Tag="{DynamicResource DeleteIcon}"
                                                    Foreground="{StaticResource IconBlackColor}"
                                                    Margin="1080,8,0,0"
                                                    />
                                            <Button x:Name="SaveButton"
                                                    Width="18"
                                                    Height="18"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    Tag="{DynamicResource SaveIcon}"
                                                    Foreground="{StaticResource IconBlackColor}"
                                                    Margin="1120,8,0,0"
                                                    Visibility="Collapsed"
                                                   />


                                        </Canvas>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </StackPanel>
                </Grid>

            </StackPanel>
        </ScrollViewer>
        <Canvas Grid.Column="1"
                Grid.Row="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="40"
                Width="300"
                Height="30">
            <Button Content="{x:Static p:Resources.AddButtonGlobal}"
                    Style="{DynamicResource MainButtonStyle}"
                    Width="135"
                    Height="30"
                    HorizontalAlignment="Right"
                   
                    Margin="160,0,0,0" />

        </Canvas>

        <Canvas x:Name="UpdateModeCanvas"
                Grid.Column="1"
                Grid.Row="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="40"
                Width="300"
                Height="30"
                Visibility="{Binding IsUpdateMode, Converter={StaticResource BoolToVisibilityConverter}}">

            <Button Content="{x:Static p:Resources.SaveButtonGlobal}"
                    Style="{DynamicResource MainButtonStyle}"
                    Width="135"
                    Height="30"
                    HorizontalAlignment="Right"
                    Command="{Binding SaveCommand}"
                    Margin="160,0,0,0" />


            <Button Content="{x:Static p:Resources.CancelButtonGlobal}"
                    Style="{DynamicResource DismissButtonStyle}"
                    Width="135"
                    Height="30"
                    HorizontalAlignment="Right"
                    Command="{Binding CancelCommand}" />

        </Canvas>
    </Grid>
</Page>
