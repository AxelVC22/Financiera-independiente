<Page x:Class="Independiente.View.Pages.EmployeeAndClientConsultation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Independiente.View.Pages"
      xmlns:p="clr-namespace:Independiente.Properties"
      xmlns:vm="clr-namespace:Independiente.ViewModel"
      xmlns:conv="clr-namespace:Independiente.Converters"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="PersonalData">

    <Page.DataContext>
        <vm:EmployeeAndClientConsultationViewModel />
    </Page.DataContext>

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/View/ViewResources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <conv:DateTimeToStringConverter  x:Key="DateTimeToStringConverter " />

        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button x:Name="BackButton"
                Style="{DynamicResource IconButtonStyle}"
                Tag="{DynamicResource BackIcon}"
                Foreground="{StaticResource IconBlackColor}"
                Margin="7,7,7,7"
                Command="{Binding GoBackCommand}" />


        <ScrollViewer Grid.Column="1"
                      Grid.Row="1"
                      Margin="0,0,10,20"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Stretch">
                <Border Background="{StaticResource BackGroundBlackColor}"
                        Height="40"
                        Margin="4"
                        CornerRadius="6"
                        Padding="5"
                        HorizontalAlignment="Stretch">
                    <Grid Width="310"
                          HorizontalAlignment="Left">
                        <TextBox x:Name="SearchTextBox"
                             Style="{StaticResource TextBoxWithPlaceholderStyle}"
                             Margin="10,0,0,0"
                             TextWrapping="Wrap"
                             MinWidth="150"
                             Width="300"
                             MaxLength="13"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             Tag="{x:Static p:Resources.SearchClientByRFCPlaceHolderGlobal}"
                             CharacterCasing="Upper"
                             Text="{Binding SearchRFC, UpdateSourceTrigger=PropertyChanged}" />

                        <Button 
                            Style="{DynamicResource IconButtonStyle}"
                            Tag="{DynamicResource SearchIcon}"
                            Foreground="{StaticResource IconBlackColor}"
                            Height="18"
                            Width="18"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="10,0"
                            Panel.ZIndex="2"
                            Command="{Binding SearchCommand}" />

                    </Grid>
                </Border>

                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Margin="10">
                  
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="840" />
                    </Grid.ColumnDefinitions>


                    <StackPanel  Grid.Column="1"
                                 HorizontalAlignment="Stretch">

                        <ListView 
                                  ItemsSource="{Binding PeopleList}"
                                  Height="420"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  Visibility="Visible"
                                  Background="Transparent"
                                  Margin="10"
                                  BorderThickness="0"
                                  SelectedItem="{Binding SelectedPerson}"
                                  >
                            
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4"
                                            Padding="0"
                                            Margin="0"
                                            MinHeight="32"
                                            Width="800"
                                            HorizontalAlignment="Stretch">
                                        <Border.Background>
                                            <SolidColorBrush Color="#dcdcdc" />
                                        </Border.Background>
                                        <Canvas>
                                            <TextBox 
                                                     Width="300"
                                                     Text="{Binding PersonalData.Name}"
                                                     HorizontalAlignment="Left"
                                                     FontSize="10"
                                                     FontWeight="Bold"
                                                     Foreground="Black"
                                                     Margin="10,5,0,0"
                                                     Style="{StaticResource TextBoxWithPlaceholderStyle}"
                                                     Height="20"
                                                IsEnabled="False"
                                                     />

                                            <TextBox Width="200"
                                                     Text="{Binding PersonalData.RFC}"
                                                     HorizontalAlignment="Left"
                                                     FontSize="10"
                                                     FontWeight="Bold"
                                                     Foreground="Black"
                                                     Margin="310,5,0,0"
                                                     Style="{StaticResource TextBoxWithPlaceholderStyle}"
                                                     Height="20"
                                                     IsEnabled="False" />

                                            <Button
                                                    Width="18"
                                                    Height="18"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    Tag="{DynamicResource ShowIcon}"
                                                    Foreground="{StaticResource IconBlackColor}"
                                                    Margin="680,8,0,0"
                                                    Command="{Binding DataContext.ShowSelectedCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}" 
                                                />


                                        </Canvas>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </StackPanel>
                </Grid>

            </StackPanel>
        </ScrollViewer>
        <Canvas Grid.Column="1"
                Grid.Row="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="40"
                Width="300"
                Height="30">
            <Button Content="{x:Static p:Resources.AddButtonGlobal}"
                    Style="{DynamicResource MainButtonStyle}"
                    Width="135"
                    Height="30"
                    HorizontalAlignment="Right"
                    Margin="160,0,0,0" />

        </Canvas>

        <Canvas Grid.Column="1"
                Grid.Row="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="40"
                Width="300"
                Height="30">
            <Button Content="{x:Static p:Resources.AddButtonGlobal}"
                    Style="{DynamicResource MainButtonStyle}"
                    Width="135"
                    Height="30"
                    HorizontalAlignment="Right"
                   
                    Margin="160,0,0,0" 
                    Command="{Binding RegisterCommand}"/>

        </Canvas>
    </Grid>
</Page>
